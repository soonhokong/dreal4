dreal_cc_library(
    name = "term",
    srcs = [
        "term.cc",
    ],
    hdrs = [
        "term.h",
    ],
    deps = [
        ":sort",
        "//dreal/symbolic",
        "//dreal/util:exception",
    ],
)

dreal_cc_library(
    name = "logic",
    srcs = [
        "logic.cc",
    ],
    hdrs = [
        "logic.h",
    ],
    visibility = [
        "//dreal/solver:__pkg__",
        "//dreal/util:__pkg__",
    ],
    deps = [
        "//dreal/util:exception",
    ],
)

dreal_cc_library(
    name = "smt2_lexer",
    srcs = ["smt2_lexer.cc"],
