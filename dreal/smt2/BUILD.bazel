dreal_cc_library(
    name = "smt2",
    srcs = ["run.cc"],
    hdrs = ["run.h"],
    visibility = [
        "//dreal:__pkg__",
        "//dreal/solver:__pkg__",
    ],
    deps = [
        ":smt2_parser",
        "//dreal/util:logging",
    ],
